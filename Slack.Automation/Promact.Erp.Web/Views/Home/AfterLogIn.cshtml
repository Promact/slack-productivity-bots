@{
    Layout = null;
}
<html lang="en">
<head>
    <base href="/">
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Slack ERP</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/nprogress/0.2.0/nprogress.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/nprogress/0.2.0/nprogress.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.3.2/jspdf.min.js"></script>
    <script src="node_modules/jspdf-autotable/dist/jspdf.plugin.autotable.umd.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/es5-shim/4.5.9/es5-shim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/zone.js/0.7.6/zone.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/reflect-metadata/0.1.9/Reflect.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/systemjs/0.19.42/system.js"></script>
    <!-- Font Awesome -->
    @Styles.Render("~/bundles/afterlogin")
    @Styles.Render("~/bundles/css")
    <script src="systemjs.config.js"></script>
    @if (@ViewBag.userEmail == "")
    {
        <script>
            var emailHashCode = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(@ViewBag.emailHashCode));
        </script>
    }
</head>
@if (@ViewBag.userEmail != "")
{
    <body class="base-page body-grey">
        <div>
            <form asp-controller="Home" asp-action="LogOff">
                <div class="after-login-nav clearfix">
                    @Html.ActionLink("Logout", "LogOff")
                </div>
                <div class="clearfix"></div>
            </form>
        </div>
        <div class="text-center" id="content">
            @Html.ActionLink("Add To Slack", "SlackOAuthAuthorization", "Home")
            @*<img alt="Add to Slack" height="40" width="139" src="https://platform.slack-edge.com/img/add_to_slack.png" srcset="https://platform.slack-edge.com/img/add_to_slack.png 1x, https://platform.slack-edge.com/img/add_to_slack@2x.png 2x" />*@
            <p>User whose email is <span>"@ViewBag.userEmail"</span> must add app to slack before proceeding to view reports or use app functionalities in slack. Also select the channel in which you want the app to post messages to.</p>
        </div>
    </body>
}
else
{
    <body class="nav-md">
        <my-app>
            <div id="nprogress"><div class="bar" role="bar" style="transform: translate3d(-0.6%, 0px, 0px); transition: all 200ms ease;"><div class="peg"></div></div><div class="spinner" role="spinner"><div class="spinner-icon"></div></div></div>
        </my-app>
        @Scripts.Render("~/bundles/customjs");
    </body>
}
</html>
